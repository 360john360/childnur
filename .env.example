# ============================================================================
# Nursery Platform Environment Configuration
# Copy this file to .env and update with your settings
# ============================================================================

# ----------------------------------
# REQUIRED - Security
# ----------------------------------
# JWT secret for authentication (REQUIRED in production)
# Generate with: openssl rand -base64 32
AUTH_SECRET=

# ----------------------------------
# REQUIRED - Database  
# ----------------------------------
# PostgreSQL connection string
DATABASE_URL=postgresql://nursery_admin:your_password_here@localhost:5432/nursery_platform

# Separate credentials for docker-compose
POSTGRES_USER=nursery_admin
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=nursery_platform

# ----------------------------------
# REQUIRED - MinIO Object Storage
# ----------------------------------
MINIO_ROOT_USER=nursery_admin
MINIO_ROOT_PASSWORD=your_secure_password_here
MINIO_BUCKET=nursery-files

# MinIO connection for the app
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_ACCESS_KEY=nursery_admin
MINIO_SECRET_KEY=your_secure_password_here

# ----------------------------------
# Optional - Application Settings
# ----------------------------------
# Node environment (development, production, test)
NODE_ENV=development

# API Port (default: 3001)
API_PORT=3001

# Frontend URL (for CORS)
APP_URL=http://localhost:3000

# ----------------------------------
# Optional - Email Settings
# ----------------------------------
# SMTP configuration (for magic links, notifications)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@nurseryhub.co.uk

# ----------------------------------
# Optional - Redis (for sessions/caching)
# ----------------------------------
REDIS_URL=redis://localhost:6379
